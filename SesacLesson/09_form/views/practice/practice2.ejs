      <br />
      <fieldset name="birthday">
        <legend>생년월일</legend>
        <label for="birthday">
          <select name="yyyy" id="year">
            <% for(i =1910; i<=2025; i++){%>
            <option value="<%=i%>" <%="i" %>></option>
            <% } %>
          </select></label
        >
        <label for="birthday">
          <select name="mm" id="month">
            <% for(i =1; i<=12; i++){%>
            <option value="<%=i%>" <%="i" %>></option>
            <% } %>
          </select></label
        >
        <label for="birthday">
          <select name="dd" id="day">
            <% for(i =1910; i<=2025; i++){%>
            <option value="<%=i%>" <%="i" %>></option>
            <% } %>
          </select></label
        >
      </fieldset>

      <fieldset>
        <legend>선택</legend>
        <label for="choose">
          <input type="color" name="color" id="likecolor" />좋아하는 색상
