              <% for(i =1; i<=12; i++){%>
              <option value="<%=i%>" <%="i" %>></option>
              <% } %>
            </select></label
          >
          <label for="birthday">
            <select name="dd" id="day">
              <% for(i =1910; i<=2025; i++){%>
              <option value="<%=i%>" <%="i" %>></option>
              <% } %>
