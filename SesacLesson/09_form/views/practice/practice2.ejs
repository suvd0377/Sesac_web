        </label>
      </fieldset>
      <button>회원가입</button>

      <script>
        function checkForm(form) {
          console.log(form.name);
          console.log(form.wm);

          if (form.name.value.trim() === "") {
            alert("이름을 작성해주세요!");
            return false;
          }

          if (form.wm.value.trim() === "") {
            alert("성별을 선택해주세요!");
            return false;
          }
        }
      </script>
    </form>
