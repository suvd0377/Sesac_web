<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chatting: [DM, Nickname]</title>
    <!-- socket.io CDN -->
    <script src="/socket.io/socket.io.js"></script>

    <!-- bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <style>
      .container {
        background-color: #9bbbd4;
        height: 500px;
        margin-top: 20px;
        /* bootstrap container Í∏∞Î≥∏ padding ÏóÜÏï†Í∏∞ ÏúÑÌï¥ */
        padding: 0;
        display: flex;
        flex-direction: column;
      }

      /***** [HEADER] *****/
      .container header {
        width: 100%;
        box-shadow: 0px 2px 2px #7a7a7a24;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-basis: 10%;
      }

      /***** [SECTION] *****/
      .container section {
        padding: 16px;
        flex-basis: 80%;
        overflow: auto;
      }

      /* section: Ïä§ÌÅ¨Î°§ Î™®Ïñë Î≥ÄÍ≤Ω */
      .container section::-webkit-scrollbar {
        width: 4px;
      }

      .container section::-webkit-scrollbar-thumb {
        background-color: #888;
        border-radius: 10px;
        padding: 1px;
        margin: 1px;
      }

      .container section::-webkit-scrollbar-track {
        padding: 1px;
        background-color: #ccc;
        border-radius: 10px;
        box-shadow: inset 0px 0px 2px white;
      }

      /***** [MSG FORM] *****/
      .container .msg-form {
        display: flex;
        justify-content: space-between;
        bottom: 0;
        padding: 8px 16px;
        flex-basis: 10%;
      }

      .container .msg-form input {
        flex-basis: 75%;
        border: none;
        border-radius: 90px;
        padding: 8px 16px;
        outline: none;
      }

      .container .msg-form input:focus + button {
        background-color: #fef01b;
      }

      .container .msg-form button {
        flex-basis: 12%;
        border: none;
        border-radius: 3px;
      }

      /* section- ÎßêÌíçÏÑ† */
      .container .speech .msg-box {
        display: inline-block;
        box-shadow: 1px 1px 5px #7a7a7a;
        border-radius: 8px;
        padding: 0.3rem;
        margin: 0.5rem 0;
        max-width: 60%;
      }

      .container .speech.me {
        text-align: right;
      }
      .container .speech.other {
        position: relative;
        margin: 10px 0;
      }

      .container .speech.other .nickname {
        font-size: 10px;
        position: absolute;
        top: -8px;
      }

      .container .speech.me .msg-box {
        background-color: #fef01b;
      }

      .container .speech.other .msg-box {
        background-color: #fff;
      }
      .container section .notice {
        width: 80%;
        background-color: #fff5;
        border-radius: 50px;
        text-align: center;
        padding: 2px 0;
        color: #4449;
        margin: 8px auto;
        font-size: 14px;
      }
      /* Ïã§Ïäµ5 dmÍ∏∞Îä• CSS */
      .container .msg-form #dm-selct {
        flex-basis: 12%;
        border: none;
        outline: none;
        border-radius: 3px;
        text-align: center;
      }

      .container .speech.other.dm .msg-box {
        background-color: #ffffff70;
      }
    </style>
  </head>
  <body>
    <div class="entry-box">
      <input type="text" id="nickname" placeholder="ÎãâÎÑ§ÏûÑ ÏûÖÎ†•" />
      <button onclick="join()">Ï±ÑÌåÖÎ∞© ÏûÖÏû•ÌïòÍ∏∞</button>
    </div>
    <div class="container d-none">
      <header>ÏΩîÏΩîÏïÑÌÜ°üç´</header>
      <section>
        <!-- <div class="speech me">
          <span class="msg-box">Ï±ÑÌåÖ ÎÇ¥Ïö©</span>
        </div>
        <div class="speech other">
          <span class="nickname">nickname</span>
          <span class="msg-box">Ï±ÑÌåÖ ÎÇ¥Ïö©</span>
        </div> -->
      </section>
      <form class="msg-form" id="msg-form">
        <select id="dm-select"></select>
        <input type="text" placeholder="Î©îÏÑ∏ÏßÄ ÏûÖÎ†•" />
        <button>Ï†ÑÏÜ°</button>
      </form>
    </div>
    <script>
      const socket = io();
      const chatContainer = document.querySelector('.container section');
      const chatForm = document.querySelector('#msg-form');
      const input = chatForm.querySelector('input');
      // Ï∂îÍ∞Ä
      const container = document.querySelector('.container');
      const entryBox = document.querySelector('.entry-box');
      const nickInput = document.querySelector('#nickname');
      const select = document.querySelector('#dm-select');
      let myNick; // ÏûÖÏû• ÏÑ±Í≥µÌñàÏùÑ Îïå ÎÇòÏùò ÎãâÎÑ§ÏûÑ Ï†ÄÏû•Ìï† Î≥ÄÏàò

      // [ÎãâÎÑ§ÏûÑ ÏÇ¨Ïö©]-1
      function join() {
        socket.emit('checkNick', nickInput.value);
      }
      // [ÎãâÎÑ§ÏûÑ ÏÇ¨Ïö©]-3 (1) ÏûÖÏû• Ïã§Ìå®
      socket.on('error', errMsg => {
        alert(errMsg);
      });

      // [ÎãâÎÑ§ÏûÑ ÏÇ¨Ïö©]-3 (2) ÎÇ¥ ÎãâÎÑ§ÏûÑ Ï†ïÎ≥¥ Ï†ÄÏû• Î∞è ÌôîÎ©¥ Î≥ÄÍ≤Ω
      socket.on('entrySuccess', nickname => {
        myNick = nickname;
        entryBox.classList.add('d-none');
        container.classList.remove('d-none');
      });

      // [Ïã§Ïäµ3] ÏûÖÏû•2
      socket.on('notice', notice => {
        const p = document.createElement('p');
        p.textContent = notice;
        p.classList.add('notice');
        chatContainer.append(p);
      });

      // [Ïã§Ïäµ4] Ï±ÑÌåÖÏ£ºÍ≥†Î∞õÍ∏∞
      chatForm.addEventListener('submit', e => {
        e.preventDefault();
        if (input.value.trim() === '') return;
        // [4-1] Î≤ÑÌäºÏùÑ ÎàåÎ†ÄÏùÑ Îïå, Î©îÏÑ∏ÏßÄÎ•º ÏÑúÎ≤ÑÏóêÍ≤å Ï†ÑÎã¨
        // (dm Ïùº Îïå Í∞ùÏ≤¥Ï†ïÎ≥¥ Ï†ÑÎã¨)
        const sendData = {
          myNick: myNick,
          dm: select.value, // DM Î≥¥ÎÇ¥Í≥†Ïûê ÌïòÎäî ÌÅ¥ÎùºÏù¥Ïñ∏Ìä∏Ïùò socket.id
          msg: input.value,
        };
        socket.emit('send', sendData);
        input.value = '';
      });

      // [4-3] Î©îÏÑ∏ÏßÄÎ•º Ï†ÑÎã¨Î∞õÍ≥†,
      // ÎÇ¥Î©îÏÑ∏ÏßÄÏôÄ Îã§Î•∏ ÌÅ¥ÎùºÏù¥Ïñ∏Ìä∏Ïùò Î©îÏÑ∏ÏßÄ Íµ¨Î∂Ñ
      socket.on('message', data => {
        // data:{id, message, isDm?}
        // console.log(data.id); // Î≥¥ÎÇ∏ ÏÇ¨ÎûåÏùò ÏïÑÏù¥Îîî
        // console.log(socket.id); // ÎÇòÏùò ÏïÑÏù¥Îîî
        const div = document.createElement('div');
        const span = document.createElement('span'); // Ï±ÑÌåÖ ÎÇ¥Ïö©

        span.classList.add('msg-box');
        div.classList.add('speech');

        if (data.isDm) {
          // DMÏùº Í≤ΩÏö∞Ïóê ÎßêÌíçÏÑ† Îß® ÏïûÏóê [Í∑ìÏÜçÎßê] Îã®Ïñ¥ Î≥¥Ïù¥ÎèÑÎ°ù
          span.innerText = '[Í∑ìÏÜçÎßê] ' + data.message;
          div.classList.add('dm');
        } else {
          span.innerText = data.message;
        }

        if (data.id === myNick) {
          // ÎÇ¥Í∞Ä Î≥¥ÎÇ∏ Î©îÏÑ∏ÏßÄ
          div.classList.add('me');
          div.append(span);
        } else {
          // ÎÇ®Ïù¥ Î≥¥ÎÇ∏ Î©îÏÑ∏ÏßÄ
          div.classList.add('other');
          const nickname = document.createElement('span');
          nickname.innerText = data.id;
          nickname.classList.add('nickname');
          div.append(nickname, span);
        }
        chatContainer.append(div);
        chatContainer.scrollTop = chatContainer.scrollHeight;
      });

      // (4) ÏûÖÏû• ÏÑ±Í≥µ, ÎÇòÎ•º Ìè¨Ìï®Ìïú Ï†ÑÏ≤¥ client ÏóêÍ≤å Ï†ÑÏ≤¥ ÎãâÎÑ§ÏûÑ Ï†ïÎ≥¥ Ï†ÑÎã¨
      socket.on('updateNicks', nickInfo => {
        console.log('nickInfo', nickInfo); // {socket.id: nickname, ... }

        let option = `<option value="all">Ï†ÑÏ≤¥</option>`;
        for (let key in nickInfo) {
          // console.log("key", key);
          // console.log("value", nickInfo[key]);
          option += `<option value="${key}">${nickInfo[key]}</option>`;
        }

        console.log(option);
        select.innerHTML = option;
      });
    </script>
  </body>
</html>
